void setup(void) {
  tft.initR(INITR_BLACKTAB);

  tft.setRotation(2);

  tft.fillScreen(ST7735_BLACK);

  tft.drawBitmap(0, 0, wastyLogo, 128, 160, 0x00C797, 0x0000);
  
  Serial.begin(9600);
  pinMode(TRIG_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);

  MG995_Servo.attach(Servo_PWM);
  MG995_Servo.write(0);
}

void(* resetFunc) (void) = 0;

void loop() {
  digitalWrite(TRIG_PIN, LOW);
  delayMicroseconds(2);

  digitalWrite(TRIG_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG_PIN, LOW);

  duration = pulseIn(ECHO_PIN, HIGH);

  distance = duration / 29 / 2;

  Serial.print("Distance: ");
  Serial.println(distance);

  delay(150);

  if(distance < 5 || distance > 20) {

    tft.fillScreen(ST7735_BLACK);
    drawtext(5, 45, "Checking bottle...", ST7735_WHITE);
    delay(2000);
    
    generateQRCode("Wasty");
    MG995_Servo.write(90);

    delay(10000);

    tft.fillScreen(ST7735_BLACK);
    drawtext(5, 45, "Thank you for saving the environment!", ST7735_WHITE);
    delay(1000);

    resetFunc();
  }
}

void drawtext(int wid, int hei, char *text, uint16_t color) {
  tft.setCursor(wid, hei);
  tft.setTextColor(color);
  tft.setTextWrap(true);
  tft.print(text);
}

void generateQRCode(const char* text) {

  QRCode qrcode;
  
  uint8_t qrcodeData[qrcode_getBufferSize(3)];
  qrcode_initText(&qrcode, qrcodeData, 3, 0, text);

  tft.fillScreen(ST7735_BLACK);

  int scale = min(tft.width() / qrcode.size, tft.height() / qrcode.size);
  
  int shiftX = (tft.width() - qrcode.size*scale)/2;
  
  int shiftY = (tft.height() - qrcode.size*scale)/2;

  for (uint8_t y = 0; y < qrcode.size; y++) {
    for (uint8_t x = 0; x < qrcode.size; x++) {
      if (qrcode_getModule(&qrcode, x, y)) {
        tft.fillRect(shiftX+x * scale, shiftY + y*scale, scale, scale, 0xFFFF);
      }
    }
  }
}

void turnServo() {
  MG995_Servo.write(0);
  delay(3000);

  MG995_Servo.detach();
  delay(2000);

  MG995_Servo.attach(Servo_PWM);
  MG995_Servo.write(180);
  delay(3000);

  MG995_Servo.detach();
  delay(2000);

  MG995_Servo.attach(Servo_PWM);
}
